{
    "name": "rapidez/statamic-query-builder",
    "description": "Statamic Query Builder addon",
    "keywords": [
        "rapidez",
        "statamic-query-builder"
    ],
    "homepage": "https://github.com/rapidez/statamic-query-builder",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Kevin Meijer",
            "email": "kevin@justbetter.nl",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Rapidez\\StatamicQueryBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rapidez\\StatamicQueryBuilder\\Tests\\": "tests"
        }
    },
    "require": {
        "elasticsearch/elasticsearch": "^8.19",
        "rapidez/core": "^4.0",
        "rapidez/statamic": "^5.0|^6.0",
        "statamic/cms": "^5.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.7",
        "laravel/pint": "^1.22",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^4.1",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^12.3"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Query Builder",
            "description": "Statamic Query Builder addon"
        },
        "laravel": {
            "providers": [
                "Rapidez\\StatamicQueryBuilder\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan",
        "style": "pint --test",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ],
        "fix-style": "pint"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
